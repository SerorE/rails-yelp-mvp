  <%= link_to "Add new restaurant", new_restaurant_path %>


<div class="container">
   <ul >
<% @restaurants.each do |restaurant|%>

  <li class="single-restaurant">
  <h1><%= restaurant.name %></h1>
  <h3><%= restaurant.address  %></h3>
  <h3><%=restaurant.phone_number %></h3>
  <h3><%=restaurant.category %></h3>
  <%= link_to edit_restaurant_path(restaurant) do%>
  <i class="fa fa-pencil"></i>
  <% end %>
    <%= link_to edit_restaurant_path(restaurant), method: :delete do%>
  <i class="fa fa-times"></i>
  <% end %>
  </li>
<% end %>
</ul>

</div>




